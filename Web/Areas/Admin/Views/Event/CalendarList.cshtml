@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var generalEvents = ViewBag.GeneralEvents as List<HRManagement.DTOs.EventDto>;
    var holidayEvents = ViewBag.HolidayEvents as List<HRManagement.DTOs.EventDto>;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">Etkinlik Listesi</h3>
    <a href="/Admin/Event/Create" class="btn btn-primary">Yeni Etkinlik</a>
</div>

<!-- Genel Etkinlikler -->
<div class="card mb-5">
    <div class="card-header bg-primary text-white">
        <strong>Genel Etkinlikler</strong>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped mb-0">
            <thead class="table-light">
                <tr>
                    <th>Başlık</th>
                    <th>Tarih</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in generalEvents)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.StartDate.ToString("dd MMMM yyyy")</td>
                        <td>
                            <a href="/Admin/Event/Edit/@item.EventId" class="btn btn-sm btn-warning">Düzenle</a>
                            <a href="/Admin/Event/Delete/@item.EventId" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Resmi Tatiller -->
<div class="card">
    <div class="card-header bg-secondary text-white">
        <strong>Resmi Tatiller</strong>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped mb-0">
            <thead class="table-light">
                <tr>
                    <th>Gün</th>
                    <th>Tarih</th>
                    <th>Tatil Adı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in holidayEvents)
                {
                    <tr>
                        <td>@item.StartDate.ToString("dddd")</td>
                        <td>@item.StartDate.ToString("dd MMMM yyyy")</td>
                        <td>@item.Title</td>
                        <td>
                            <a href="/Admin/Event/Edit/@item.EventId" class="btn btn-sm btn-warning">Düzenle</a>
                            <a href="/Admin/Event/Delete/@item.EventId" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
