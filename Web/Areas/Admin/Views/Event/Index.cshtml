@model IEnumerable<HRManagement.DTOs.EventDto>

@{
    ViewData["Title"] = "Etkinlik Takvimi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3>@ViewData["Title"]</h3>
<a href="/Admin/Event/Create" class="btn btn-success mb-3">Yeni Etkinlik</a>
<div id="calendar"></div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.css" rel="stylesheet" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'tr',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                events: {
                    url: '/Admin/Event/GetAllEvents',
                    method: 'GET',
                    failure: function () {
                        alert('Etkinlikler yüklenemedi!');
                    }
                },
                eventDataTransform: function (eventData) {
                    return {
                        id: eventData.eventId,
                        title: eventData.title,
                        start: eventData.startDate,
                        end: eventData.endDate,
                        allDay: eventData.isFullDay
                    };
                }
            });

            calendar.render();
        });
    </script>
}
