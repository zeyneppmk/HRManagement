
@model IEnumerable<HRManagement.DTOs.AppNotificationDto>
@{
    ViewBag.Title = "Gelen Kutusu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <!-- Sidebar -->
    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <a href="/Admin/Notification/Create" class="btn btn-danger w-100 mb-3">Compose</a>
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="/Admin/Notification/Inbox" class="text-decoration-none text-dark"><i class="fas fa-inbox"></i> Inbox</a>
                        <span class="badge rounded-pill bg-info">@Model.Count()</span>
                    </li>
                    <li class="list-group-item">
                        <a href="/Admin/Notification/Sent" class="text-decoration-none text-dark"><i class="fas fa-paper-plane"></i> Sent</a>
                    </li>
                    <li class="list-group-item">
                        <a href="/Admin/Notification/Draft" class="text-decoration-none text-dark"><i class="fas fa-file-alt"></i> Draft</a>
                    </li>
                    <li class="list-group-item">
                        <a href="/Admin/Notification/Trash" class="text-decoration-none text-dark"><i class="fas fa-trash"></i> Trash</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Message List -->
    <div class="col-md-9">
        <h4 class="mb-3">Inbox</h4>

        @foreach (var item in Model)
        {
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <strong>@item.SenderName</strong>
                        <span class="text-muted">@item.CreatedAt.ToString("dd MMM yyyy HH:mm")</span>
                    </div>
                    <div class="mt-1">
                        <small class="badge bg-primary">@item.Type</small>
                    </div>
                    <div class="mt-2">
                        <strong>@item.Title</strong>
                        <p class="mb-0">@item.Message</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
