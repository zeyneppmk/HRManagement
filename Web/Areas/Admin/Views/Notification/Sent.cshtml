@{
}
@model IEnumerable<HRManagement.DTOs.AppNotificationDto>
@{
    ViewBag.Title = "Gönderilenler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h4>Gönderilenler</h4>
@foreach (var item in Model)
{
    <div class="card mb-3 shadow-sm">
        <div class="card-body">
            <strong>@item.ReceiverName</strong> - @item.CreatedAt.ToString("g")
            <div><strong>@item.Title</strong></div>
            <p>@item.Message</p>
        </div>
    </div>
}
