@{
}
@model List<HRManagement.DTOs.PaymentDto>

@{
    ViewData["Title"] = "Ödeme Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3 class="mt-3">Ödeme Listesi</h3>
<a class="btn btn-success mb-3" href="/Admin/Payment/Create">Yeni Ödeme</a>

<table class="table table-bordered table-striped shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Kullanıcı ID</th>
            <th>Tutar</th>
            <th>Dönem</th>
            <th>Tarih</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserId</td>
                <td>@item.Amount ₺</td>
                <td>@item.PaymentPeriod</td>
                <td>@item.PaymentDate.ToShortDateString()</td>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/Admin/Payment/Edit/@item.PaymentId">Düzenle</a>
                    <a class="btn btn-sm btn-danger" href="/Admin/Payment/Delete/@item.PaymentId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
