@{
}

@model List<HRManagement.DTOs.PozisyonDto>
@{
    ViewData["Title"] = "Pozisyon Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3 class="mb-3">Pozisyon Listesi</h3>
<a class="btn btn-primary mb-3" href="/Admin/Position/Create">Yeni Pozisyon Ekle</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Kullanıcı ID</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Başlangıç Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PozisyonId</td>
                <td>@item.UserId</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.AssignedDate.ToShortDateString()</td>
                <td>
                    <a class="btn btn-info btn-sm text-white" href="/Admin/Position/Edit/@item.PozisyonId">Düzenle</a>
                    <a class="btn btn-danger btn-sm" href="/Admin/Position/Delete/@item.PozisyonId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
