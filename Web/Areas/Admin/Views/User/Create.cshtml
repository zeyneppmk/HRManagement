@model HRManagement.DTOs.UserDto

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    ViewData["Title"] = "Kullanıcı Ekle";
}

<div class="container">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    </ul>
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="FirstName" class="form-label">Ad</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LastName" class="form-label">Soyad</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PasswordHash" class="form-label">Şifre</label>
            <input asp-for="PasswordHash" type="password" class="form-control" />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>

        @{
            var roleList = ViewBag.Roles as List<SelectListItem>;
            var departmentList = ViewBag.Departments as List<SelectListItem>;
        }

        <div class="mb-3">
            <label asp-for="RoleId" class="form-label">Rol</label>
            <select asp-for="RoleId" class="form-select">
                <option value="">-- Rol Seçin --</option>
                @foreach (var item in roleList)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DepartmentId" class="form-label">Bölüm</label>
            <select asp-for="DepartmentId" class="form-select">
                <option value="">-- Bölüm Seçin --</option>
                @foreach (var item in departmentList)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
            <span asp-validation-for="DepartmentId" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label">Aktif mi?</label>
        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
</div>